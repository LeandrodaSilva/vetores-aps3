
#include<stdio.h>

#define t 20

int main(){

    int vet[t],i = 0,maior = 0, menor = 0,valor_int = 0,linha = 0;
    float valor_inf;


    while (i < 1) {
      /* coleta o primeiro valor */
      printf("Informe um valor: ");
      scanf("%f", &valor_inf);

      valor_int = (int) valor_inf;

      if (valor_inf == valor_int) {
        /* se for inteiro */
        vet[0] = valor_inf;
        i++;
      } else {
        /* mensagem de erro */
        printf("\nInforme somente valores inteiros!\n");
      }
    }

    maior = menor = vet[0];

    while (i < t) {
      /* coleta o vetor */
      printf("Informe um valor: ");
      scanf("%f", &valor_inf);

      valor_int = (int) valor_inf;

      if (valor_inf == valor_int) {
        /* Se o valor for inteiro */
        vet[i] = valor_inf;
        i++;
        if (valor_inf > maior) {
          /* se for maior */
          maior = valor_inf;
        }
        if (valor_inf < menor) {
          /* se for menor */
          menor = valor_inf;
        }

      } else {
        /* mensagem de erro */
        printf("\nInforme somente valores inteiros!\n");
      }

    }

    printf("\nVetor informado: \n\n");

    for(i = 0; i < t; i++){
        if (linha < 3) {
          /* pular linha para grandes vetores */

          printf("%.3d | ",vet[i]);
          linha++;
        }else{
          printf("\n");
          linha = 0;
        }
    }

    printf("\n\nMaior valor: %d\nMenor valor: %d\n",maior,menor);


    return 0;
}
